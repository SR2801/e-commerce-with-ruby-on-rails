<%= form_with model: item do |form| %>
<div>
    <%= form.label :name%>
    <%= form.text_field :name%>
    <%= form.label :price%>
    <%= form.text_field :price%>
    <%= form.label :inventory_count %>
    <%= form.text_field :inventory_count%>
    <%= form.label :description%>
    <%= form.rich_text_area :description, style: "display: block"%>
    <%= form.label :featured_image %>
    <%= form.file_field :featured_image, style: "display: block; width: 400 px", accept: "image/*"%>
</div>
<div>
    <%= form.submit%>
</div>
<div>
    <%= link_to "Cancel", item %>
</div>
<% end %>